# Copy to deploy/.env on the server (same directory as docker-compose.yml)

# === Server / compose ===
APP_PORT=3000

# === Postgres (compose "db") ===
POSTGRES_DB=pumpfun_panel
POSTGRES_USER=panel
POSTGRES_PASSWORD=change_me

# If you use the bundled postgres service, keep it like this:
DATABASE_URL=postgresql://panel:change_me@db:5432/pumpfun_panel

# === Solana ===
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
NEXT_PUBLIC_SOLANA_RPC_URL=https://your-mainnet-rpc
NEXT_PUBLIC_SOLANA_RPC_URLS=

# Security toggles
NEXT_PUBLIC_ALLOW_PRIVATE_KEYS=false
EXPOSE_WALLET_SECRETS=false

LOG_LEVEL=info

# === Jito (optional) ===
JITO_USE_SDK=true
JITO_AUTH_KEYPAIR=
JITO_BUNDLE_API_URL=
JITO_BLOCK_ENGINE_URL=

# === Telegram alerts (optional) ===
TELEGRAM_ALERTS_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=





